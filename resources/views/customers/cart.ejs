<div class="cart " style="height:1000px;">
  <%if(session.cart==undefined){%>
  <div class="blank pt-10">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-bold">Your Basket is empty &#128577;</h1>
      <p class="text-gray-500 text-lg">
        To order a juice or shake , go to main page.
      </p>
      <img src="/img/empty.jpg" class="w-2/5 mx-auto mt-10 mb-5" />
      <button class="button-cart py-1 px-6 rounded-full mb-4">
        Go back
      </button>
    </div>
  </div>
  <%}else{%>
  <div class="exist container mx-auto w-1/2">
    <div class="flex justify-center items-center border-b border-gray-300 pb-4">
      <img src="/img/exist-cart.jpg" class="w-32" alt=" " />
      <h1 class=" text-2xl font-bold">Order Status</h1>
    </div>
    <%Object.values(session.cart.items).forEach((juice)=>{%>
    <div class="juices flex items-center mb-8 ">
      <img src="/img/juices.png" class="w-64" />
      <div class="w-full flex items-center justify-between">
        <div class="ml-4">
          <h1 class="w-10"><%=juice.items.name%></h1>
          <span><%=juice.items.size%></span>
        </div>
        <span><%=juice.qty%> Glass</span>
        <span>$<%=juice.items.price%></span>
      </div>
    </div>
    <%})%>
    <div class="text-right pt-4">
      <div>
        <span class="font-bold text-lg">Total Cost : </span>
        <span class="amount font-bold ml-2"
          >$ <%=session.cart.totalPrice%></span
        >
      </div>
    </div>
    <div>
      <%if(user){%>
      <form action="/cart" method="POST" class="text-right">
        <input
          class="border border-gray-400 p-2 w-1/2 mb-2"
          type="text"
          name="Address"
          placeholder="Address"
        />
        <input
          class="border border-gray-400 p-2 w-1/2"
          type="text"
          name="Phone"
          placeholder="Phone number"
        />
        <button
          type="submit"
          class="ml-auto block cursor-pointer px-6  py-2 rounded-full text
 -white font-bold mt-6 button-cart"
        >
          Order Now
        </button>
      </form>
    </div>
    <%}else{%>
    <div class="text-right mt-6">
      <a
        href="/login"
        class="cursor-pointer px-6  py-2 rounded-full text
-white font-bold mt-6 button-cart"
        >Login to continue</a
      >
    </div>
    <%}%>
  </div>
</div>
<%}%>
